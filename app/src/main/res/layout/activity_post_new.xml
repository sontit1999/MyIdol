<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewmodel"
            type="com.example.myidol.ui.postnew.PostNewViewModel" />
    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.postnew.PostNewActivity">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarr"
            android:background="@color/colorwhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <ImageButton
                       android:id="@+id/iv_back"
                       android:background="@null"
                       android:src="@drawable/ic_arrow_back_black_24dp"
                       android:layout_width="25dp"
                       android:layout_height="25dp"/>
                   <TextView
                       android:id="@+id/tv_slogan"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="20dp"
                       android:layout_toRightOf="@id/iv_back"
                       android:fontFamily="@font/caveat_brush"
                       android:text="Bài viết mới"
                       android:textColor="@color/colorblack"
                       android:textSize="19sp" />
                   <TextView
                       android:id="@+id/tv_post"
                       android:layout_marginEnd="10dp"
                       android:layout_alignParentRight="true"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:padding="@dimen/padding_5dp"
                       android:fontFamily="@font/caveat_brush"
                       android:text="Chia sẻ"
                       android:textColor="@color/colormain"
                       android:textSize="19sp" />
               </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
        <ScrollView
            android:id="@+id/scrollview"
            android:background="@color/colorwhite"
            android:layout_below="@id/appBarr"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_post"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"/>
                <EditText
                    android:id="@+id/et_caption"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:fontFamily="@font/caveat_brush"
                    android:inputType="textCapSentences|textMultiLine"
                    android:background="@null"
                    android:hint="Viết cảm nghĩ ..."
                    android:maxHeight="150dp"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </EditText>
            </LinearLayout>
        </ScrollView>
        <com.jpardogo.android.googleprogressbar.library.GoogleProgressBar
            android:id="@+id/pb_loading"
            android:layout_centerInParent="true"
            app:type="chrome_floating_circles"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</layout>