<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="comment"
            type="com.example.myidol.model.Comment" />
        <variable
            name="callback"
            type="com.example.myidol.callback.CommentCallback" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="@dimen/padding_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/sondz5"
            android:layout_width="@dimen/size_icon"
            android:layout_height="@dimen/size_icon"/>
        <TextView
            android:id="@+id/tv_nameAuthor"
            android:text="Sơn tít"
            app:layout_constraintLeft_toRightOf="@id/iv_avatar"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="@dimen/content_size_main"
            android:textColor="@color/colorwhite"
            android:layout_width="0dp"
            android:paddingHorizontal="@dimen/padding_bottom_nav"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_content"
            android:text="xinh gái quá"
            app:layout_constraintLeft_toRightOf="@id/iv_avatar"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="@dimen/content_size_main"
            app:layout_constraintTop_toBottomOf="@id/tv_nameAuthor"
            android:textColor="@color/colorgrey"
            android:layout_width="0dp"
            android:paddingHorizontal="@dimen/padding_bottom_nav"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_time"
            android:text="30 phút"
            app:layout_constraintLeft_toRightOf="@id/iv_avatar"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="12dp"
            android:layout_marginTop="@dimen/size_icon_small"
            app:layout_constraintTop_toBottomOf="@id/tv_content"
            android:textColor="@color/colorgrey"
            android:layout_width="0dp"
            android:paddingHorizontal="@dimen/padding_bottom_nav"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>