<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="comment"
            type="com.example.myidol.model.Comment" />
        <variable
            name="callback"
            type="com.example.myidol.callback.CommentCallback" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="@dimen/padding_bottom_nav"
        android:background="@color/colorwhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatarComment"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="@dimen/size_icon"
            android:layout_height="@dimen/size_icon"/>
        <TextView
            android:id="@+id/tv_nameAuthorComment"
            android:text=""
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/iv_avatarComment"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="14sp"
            android:textColor="@color/colorblack"
            android:layout_width="0dp"
            android:paddingHorizontal="@dimen/padding_bottom_nav"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_contentComment"
            android:text="@{comment.content}"
            android:textSize="14sp"
            android:paddingHorizontal="10dp"
            app:layout_constraintLeft_toRightOf="@id/iv_avatarComment"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_nameAuthorComment"
            android:textColor="@color/colorblack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_timeComment"
            android:text="@{comment.timecomment}"
            android:textSize="12dp"
            android:layout_marginTop="@dimen/padding_5dp"
            app:layout_constraintLeft_toRightOf="@id/iv_avatarComment"
            app:layout_constraintTop_toBottomOf="@id/tv_contentComment"
            android:textColor="@color/colorgrey"
            android:layout_width="wrap_content"
            android:paddingHorizontal="@dimen/padding_bottom_nav"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>