<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">
    <data>
        <variable
            name="post"
            type="com.example.myidol.model.Post" />
        <variable
            name="callback"
            type="com.example.myidol.callback.Postcallback" />
    </data>
    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/container_infor"
                android:padding="15dp"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_avatar"
                    android:src="@drawable/sondz5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:id="@+id/tv_nameAuthor"
                    android:text="Sơn tít"
                    android:fontFamily="@font/butcherman"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/tittle_size_main"
                    android:layout_toRightOf="@id/iv_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_time"
                    android:text="@{post.timepost}"
                    android:layout_marginStart="10dp"
                    android:textColor="#448AFF"
                    android:layout_below="@id/tv_nameAuthor"
                    android:textSize="14sp"
                    android:layout_toRightOf="@id/iv_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_describe"
                android:text="@{post.decribe}"
                android:textSize="15dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#363333"
                android:layout_below="@id/container_infor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/iv_post"
                android:scaleType="centerCrop"
                android:src="@drawable/gaixinh"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@id/tv_describe"
                android:onClick="@{()->callback.onPhotoClick(post)}"
                bind:imageUrl="@{post.linkImage}"
                 />
            <View
                android:id="@+id/viewngang"
                android:background="#F1E5E5"
                android:layout_below="@id/iv_post"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:id="@+id/container_feature"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_below="@id/viewngang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/likes"
                    android:paddingVertical="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/iconsheart"
                        android:layout_width="@dimen/size_ic_tym"
                        android:layout_height="@dimen/size_ic_tym"/>
                    <TextView
                        android:text="like"
                        android:layout_marginLeft="@dimen/padding_5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/comment"
                    android:paddingVertical="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/icons8comment"
                        android:layout_width="@dimen/size_ic_tym"
                        android:layout_height="@dimen/size_ic_tym"/>
                    <TextView
                        android:text="comments"
                        android:layout_marginLeft="@dimen/padding_5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/share"
                    android:paddingVertical="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/icons8share"
                        android:layout_width="@dimen/size_ic_tym"
                        android:layout_height="@dimen/size_ic_tym"/>
                    <TextView
                        android:text="share"
                        android:layout_marginLeft="@dimen/padding_5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>