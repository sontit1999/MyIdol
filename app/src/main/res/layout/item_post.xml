<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">
    <data>
        <variable
            name="post"
            type="com.example.myidol.model.Post" />
        <variable
            name="callback"
            type="com.example.myidol.callback.Postcallback" />
    </data>
    <androidx.cardview.widget.CardView
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:background="@color/colorblack"
        app:cardUseCompatPadding="true"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:orientation="vertical"
            android:background="@color/colorblack"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_post"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{()->callback.onPhotoClick(post)}"
                bind:imageUrl="@{post.linkImage}"
                 />
            <LinearLayout
                android:id="@+id/container_function"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:onClick="@{()->callback.onLikeClick(post)}"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_like"
                        android:src="@drawable/ic_like"
                        android:layout_width="@dimen/size_icon"
                        android:layout_height="@dimen/size_icon"/>
                    <TextView
                        android:id="@+id/tv_numberLike"
                        android:text="@{post.numberLike}"
                        android:textColor="@color/colorwhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_weight="1"

                    android:onClick="@{()->callback.onCommentClick(post)}"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_comment"
                        android:src="@drawable/ic_comment"
                        android:layout_width="@dimen/size_icon"
                        android:layout_height="@dimen/size_icon"/>
                    <TextView
                        android:id="@+id/tv_numberComment"
                        android:text="@{post.numberComment}"
                        android:textColor="@color/colorwhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:onClick="@{()->callback.onDownloadClick(post)}"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_download"
                        android:src="@drawable/ic_download"
                        android:layout_width="@dimen/size_icon"
                        android:layout_height="@dimen/size_icon"/>
                    <TextView
                        android:id="@+id/tv_numberDownload"
                        android:text="@{post.numberDownload}"
                        android:textColor="@color/colorwhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/containerInfor"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/padding_bottom_nav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_nameAuthor"
                    android:text="@{post.nameAuthor}"
                    android:onClick="@{()->callback.onDownAuthorclickClick(post)}"
                    android:textColor="@color/colorwhite"
                    android:layout_marginBottom="@dimen/padding_bottom_nav"
                    android:textSize="@dimen/tittle_size_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_describe"
                    android:text="@{post.decribe}"
                    android:textColor="@color/colorwhite"
                    android:layout_below="@id/tv_nameAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>