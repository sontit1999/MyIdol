<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="photo"
            type="com.example.myidol.model.Photo" />
        <variable
            name="callback"
            type="com.example.myidol.callback.PhotoCallback" />
    </data>
    <androidx.cardview.widget.CardView
        app:cardElevation="1dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_photo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                bind:imageUrl="@{photo.linkImage}"
                android:scaleType="centerCrop"
                android:onClick="@{()->callback.onPhotoClick(photo)}"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>
            <LinearLayout
                android:id="@+id/container_like"
                android:layout_marginLeft="@dimen/padding_5dp"
                android:layout_marginBottom="@dimen/padding_5dp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_like"
                    android:src="@drawable/ic_tym"
                    android:layout_width="@dimen/size_ic_tym"
                    android:layout_height="@dimen/size_ic_tym"/>
                <TextView
                    android:id="@+id/tv_like"
                    android:text="200"
                    android:textColor="@color/colorwhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>